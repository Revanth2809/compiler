#include <stdio.h>
#include <string.h>

int main() {
    char stack[20], ip[20], opt[10][10][2], ter[10];
    int i, j, n, top = 0, col, row;
    
    printf("Enter the number of terminals:");
    scanf("%d", &n);
    
    printf("\nEnter the terminals:");
    scanf("%s", ter);
    
    printf("\nEnter the table values:\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            printf("Enter the value for %c %c:", ter[i], ter[j]);
            scanf(" %s", opt[i][j]);
        }
    }
    
    printf("\nOPERATOR PRECEDENCE TABLE:\n");
    printf("\t");
    for (i = 0; i < n; i++) {
        printf("%c\t", ter[i]);
    }
    printf("\n");
    
    for (i = 0; i < n; i++) {
        printf("%c\t", ter[i]);
        for (j = 0; j < n; j++) {
            printf("%c\t", opt[i][j][0]);
        }
        printf("\n");
    }
    
    stack[top] = '$';
    
    printf("\nEnter the input string:");
    scanf(" %s", ip);
    
    i = 0;
    
    printf("\nSTACK\t\tINPUT STRING\t\tACTION\n");
    printf("\n%s\t\t\t%s\t\t\t", stack, ip);
    
    while (i < strlen(ip)) {
        for (j = 0; j < n; j++) {
            if (stack[top] == ter[j]) row = j;
            if (ip[i] == ter[j]) col = j;
        }
        
        if ((stack[top] == '$') && (ip[i] == '$')) {
            printf("String is accepted");
            break;
        } else if ((opt[row][col][0] == '<') || (opt[row][col][0] == '=')) {
            stack[++top] = opt[row][col][0];
            stack[++top] = ip[i];
            printf("Shift %c", ip[i]);
            i++;
        } else {
            if (opt[row][col][0] == '>') {
                while (stack[top] != '<') {
                    top--;
                }
                top--;
                printf("Reduce");
            } else {
                printf("\nString is not accepted");
                break;
            }
        }
        
        printf("\n");
        for (j = 0; j <= top; j++) {
            printf("%c", stack[j]);
        }
        printf("\t\t\t");
        for (j = i; j < strlen(ip); j++) {
            printf("%c", ip[j]);
        }
        printf("\t\t\t");
    }
    
    return 0;
}
